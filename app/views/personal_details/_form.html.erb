<%= form_for(@user,  :html => {:class=>'form-horizontal'}) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this personal_detail from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group col-lg-8">
      <%= f.label :first_name, :class=>'col-sm-2 control-label' %>
      <div class="col-sm-6">
        <%= f.text_field :first_name, disabled: true,  :class=>'form-control input-sm', :size=>10, autofocus: true %>
      </div>
    </div>

    <div class="form-group col-lg-8">
      <%= f.label :middle_name, :class=>'col-sm-2 control-label' %>
      <div class="col-sm-6">
        <%= f.text_field :middle_name, :class=>'form-control input-sm', :size=>10 %>
      </div>
    </div>

    <div class="form-group col-lg-8">
      <%= f.label :last_name, :class=>'col-sm-2 control-label' %>
      <div class="col-sm-6">
        <%= f.text_field :last_name, disabled: true, :class=>'form-control input-sm', :size=>10 %>
      </div>
    </div>

    <div class="form-group col-lg-8">
      <%= f.label :email,  :class=>'col-sm-2 control-label' %>
      <div class="col-sm-6">
        <%= f.email_field :email, disabled: true, :class=>'form-control input-sm', :size=>10 %>
      </div>
    </div>

    <%= f.fields_for :contacts do |contact_fields| %>
        <div class="form-group col-lg-8">
          <%= f.label :Mobile, :class=>'col-sm-2 control-label' %>
          <div class="col-sm-6">
            <%= contact_fields.text_field :value, disabled: true, :class=>'form-control input-sm', :size=>10 %>
          </div>
        </div>
    <% end %>

    <%= f.fields_for :gender do |gender_fields| %>
        <div class="form-group col-lg-8">
          <%= f.label :Gender, :class=>'col-sm-2 control-label' %>
            <div class="col-sm-6">
              <select class="form-control">
                <option value="one">Male</option>
                <option value="two">Female</option>
                <option value="three">Other</option>
              </select>
            </div>
          </div>
    <% end %>

    <%= f.fields_for :birth_date do |birth_date_fields| %>
    <div class="form-group col-lg-8 required">
      <%= birth_date_fields.label :birth_date, :class=>'col-sm-2 control-label' %>
      <div class="col-sm-6">
        <%= f.date_select :birth_date, :class=>'form-control input-sm', :size=>10 %>
      </div>
    </div>
    <% end %>

    <div class="form-group col-lg-8">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Save", :class=>"btn btn-primary btn-md" %>
        <%= link_to 'Cancel', :back %>
      </div>
    </div>
<% end %>
